{% extends 'base.html.twig' %}

{% block title %} Case Study{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>En Uygun / En Düşük Değerler</h1>
                <ul>

                </ul>

                <table class="table table-hover table-dark">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Para Birimi</th>
                        <th scope="col">Değer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key,value in data %}
                    <tr>
                        <th scope="row" >{{ loop.index }}</th>
                        <td style="text-transform: uppercase !important;">{{ key }}</td>
                        <td>{{ value }}</td>
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}
